<link rel="stylesheet" href="../../stylesheets/push.css" />
<% layout('layouts/boilerplate') %>

  <h1 class="text-center">Edit a Retreat</h1>
  <div class="container d-flex justify-content-center align-items-center">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
        <div class="card shadow p-3">
          <form
            action="/yogaretreats/<%=yogaretreats._id%>?_method=PUT"
            method="POST"
            class="validated-form"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label class="form-label" for="title">Title</label>
              <input
                class="form-control"
                type="text"
                id="title"
                name="yogaretreat[title]"
                value="<%= yogaretreats.title %>"
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="location">Location</label>
              <input
                class="form-control"
                type="text"
                id="location"
                name="yogaretreat[location]"
                value="<%= yogaretreats.location %>"
                required
              />
            </div>
            <div class="mb-3"></div>
            <div class="mb-3">
              <label class="form-label" for="price">Retreat Price</label>
              <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input
                  type="text"
                  class="form-control"
                  id="price"
                  placeholder="0.00"
                  aria-label="price"
                  aria-describedby="price-label"
                  name="yogaretreat[price]"
                  value="<%= yogaretreats.price %>"
                  required
                />
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="description">Description</label>
              <textarea
                class="form-control"
                type="text"
                id="description"
                name="yogaretreat[description]"
                required
              >
        <%= yogaretreats.description %></textarea
              >
            </div>
            <label for="">Want to add more images?</label>
            <div class="mb-3">
              <div class="form-file custom-file">
                <input
                  type="file"
                  class="form-file-input"
                  id="image"
                  name="image"
                  multiple
                />
                <label class="form-file-label" for="image">
                  <span class="form-file-text custom-file-label"
                    >Choose image(s)...</span
                  >
                  <span class="form-file-button">Browse</span>
                </label>
              </div>
            </div>
            <div class="mb-3">
              <% yogaretreats.images.forEach(function(img, i) { %>
              <img src="<%=img.url%>" class="img-thumbnail" alt="" />
              <div class="form-check-inline">
                <input
                  type="checkbox"
                  name="deleteImages[]"
                  value="<%= img.filename %>"
                  id="image-<%= i %>"
                />
              </div>
              <label for="image-<%= i %>">Delete</label>
              <% }) %>
            </div>
            <div class="mb-3">
              <button class="btn">Edit this Retreat</button>
            </div>
          </form>
        </div>
      </div>
      <script>
        (function () {
          "use strict";
          var forms = document.querySelectorAll(".validated-form");
          Array.from(forms).forEach(function (form) {
            form.addEventListener(
              "submit",
              function (event) {
                if (!form.checkValidity()) {
                  event.preventDefault();
                  event.stopPropagation();
                }

                form.classList.add("was-validated");
              },
              false
            );
          });
        })();
      </script>
    </div>
  </div>
</div>
